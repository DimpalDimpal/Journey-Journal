        <TextView
            android:id="@+id/contactUsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/reasons"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Contact Us"
            android:textColor="#45B39D"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/contactUsTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            >
            <ImageView
                android:id="@+id/icFacebook"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reasons"
                android:src="@drawable/facebook"
                android:background="@drawable/developer_bg"
                android:layout_marginStart="16dp"
                android:padding="6dp"
                />
            <ImageView
                android:id="@+id/icLinkedin"
                android:layout_width="50dp"
                android:layout_height="50dp"
